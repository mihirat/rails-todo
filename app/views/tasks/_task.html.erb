<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>State:</strong>
    <%= task.state %>
  </p>

  <p>
    <strong>Due at:</strong>
    <%= task.due_at %>
  </p>

  <p>
    <strong>Deleted at:</strong>
    <%= task.deleted_at %>
  </p>

</div>
